{
    "id": "arcade",
    "name": "arcade",
    "title": "MakeCode Arcade",
    "corepkg": "core",
    "cloud": {
        "workspace": false,
        "sharing": true,
        "importing": true,
        "packages": true
    },
    "bundleddirs": [
        "libs/core",
        "libs/screen",
        "libs/game",
        "libs/keys",
        "libs/music",
        "libs/device",
        "libs/turtle"
    ],
    "compile": {
        "saveAsPNG": true
    },
    "serial": {
        "useEditor": true,
        "log": true,
        "editorTheme": {
            "graphBackground": "#d9d9d9",
            "lineColors": ["#009DDC", "#FB48C7", "#40bf4a", "#8073E5", "#d25b33"]
        }
    },    
    "runtime": {
      "mathBlocks": true,
      "loopsBlocks": true,
      "logicBlocks": true,
      "variablesBlocks": true,
      "textBlocks": true,
      "functionBlocks": true,
      "listsBlocks": true 
    },
    "simulator": {
        "autoRun": true,
        "aspectRatio": 0.85,
        "enableTrace": true,
        "debugger": true
    },
    "appTheme": {
        "logoUrl": "https://github.com/Microsoft/pxt-32",
        "logo": "./static/logo.svg",
        "docsLogo": "./static/logo.svg",
        "portraitLogo": "./static/logo.svg",
        "footerLogo": "./static/logo.svg",
        "homeUrl": "https://arcade.makecode.com/",
        "privacyUrl": "https://go.microsoft.com/fwlink/?LinkId=521839",
        "termsOfUseUrl": "https://go.microsoft.com/fwlink/?LinkID=206977",
        "betaUrl": "https://github.com/Microsoft/pxt-32",
        "boardName": "Arcade",
        "docMenu": [
            {
                "name": "About",
                "path": "/about"
            },
            {
                "name": "Docs",
                "path": "/docs"
            }
        ],
        "coloredToolbox": true,
        "monacoToolbox": true,
        "invertedMenu": true,
        "showHomeScreen": true,
        "highContrast": true,
        "hasAudio": true,
        "allowPackageExtensions": true,
        "homeScreenHero": "./static/hero.png",    
        "extendEditor": true,    
        "blocklyOptions": { 
            "grid": {
                "spacing": 20,
                "length": 100,
                "colour": "rgba(107, 79, 118, 0.10)",
                "snap": true
            }
        },
        "blockColors": {
            "loops": "#698927",
            "logic": "#06B3E0",
            "math": "#3D30AD",
            "variables": "#F80102",
            "text": "#FF9DA5",
            "arrays": "#FF8F08"
        },
        "simAnimationEnter": "fly right in",
        "simAnimationExit": "fly right out",
        "crowdinProject": "kindscript",
        "monacoColors": {
            "editor.background": "#FFFAE7"
        }
    }
}
